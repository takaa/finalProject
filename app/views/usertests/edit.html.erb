<div class="contents clearfix">
    <%= form_tag("/usertests/#{@usertest.id}", method: :patch ) do %>
      <h3>
        編集する
      </h3>
      <div class="formset">
        <div class="image_form">
            <input placeholder="Image Url" type="text" name="image" value="<%= @usertest.image %>" autofocus="true">
        </div>
        <div class="text_form">
            <textarea placeholder="text" name="text" cols="30" rows="10"><%= @usertest.text %></textarea>
        </div>
      <input type="submit" value="SENT">
    </div>
    <% end %>
  </div>
